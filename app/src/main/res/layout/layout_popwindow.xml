<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_transparent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_pop_white"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:text="测试"
            android:gravity="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_ed"

            />

        <TextView
            android:id="@+id/tv_pop_message"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:textColor="@color/color_blue_65"
            android:textSize="18dp"
            android:text="测试"
            android:gravity="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/color_gray_ed"/>

        <TextView
            android:id="@+id/tv_pop_cancel"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:textColor="@color/color_gray_be"
            android:textSize="18dp"

            android:text="@string/dialog_cancel"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>